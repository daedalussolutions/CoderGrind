<div class="main-container">
    <div class="main-text">
        <h1>Log In</h1>
        
        <div class="main-form">
            <%= form_with model: @user, url: session_path do |form| %>
                <div>
                <%= form.email_field :email, placeholder: "Email"%>
                </div>
            
                <div>
                    <%= form.password_field :password , placeholder: "Password"%>
                </div>
            
                <div>
                <%= form.submit "Log In" %>
                </div>
            <% end %>
        </div>
        
        <%= link_to "Forgot your password?", new_password_reset_path %>
        <%= link_to "New user?", new_registration_path %>
    </div>
    
</div>
