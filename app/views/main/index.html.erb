<div class="main-container">
    <div class="main-text">
        <h1>Log In</h1>
        
        <div class="main-form">
            <%= form_with model: @user, url: session_path do |form| %>
                <div><%= notice %></div>
                <div><%= alert %></div>
                <div>
                <%= form.email_field :email, placeholder: "Email"%>
                <div class="hand-icon"><%= image_tag("icons/cursor.ico") %></div>
                </div>
            
                <div>
                    <%= form.password_field :password , placeholder: "Password"%>
                    <div class="hand-icon"><%= image_tag("icons/cursor.ico") %></div>
                </div>
            
                <div>
                <%= form.submit "Log In" %>
                </div>
            <% end %>
        
        
            <div class="login-buttons-container">
                    <%= link_to "Forgot your password?", new_password_reset_path %><br>
                    <%= link_to "New user?", new_registration_path %>
            </div>
        </div>

        <div class="login-links-container">
            <%= link_to "About", about_path %><br class="mobile-new-line">
            <%= link_to "Privacy Policy", privacy_path %><br class="mobile-new-line">
            <%= link_to "Terms of Service", terms_of_service_path%>
        </div>
    </div>
</div>
